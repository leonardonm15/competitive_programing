#include <bits/stdc++.h>

using namespace std;

#define endl '\n' 
//#define int long long

// ----------    GRIND MENTALITY    ---------     
// /* ESCREVE TODAS AS SUAS IDEIAS E TESTA */
// ----------    GRIND MENTALITY    ---------     

void solve () {
    int n, m; cin >> n >> m;
    vector<int> a(n);
    vector<int> b(n);
    for (int i=0; i < n; i++) cin >> a[i];
    for (int i=0; i < m; i++) cin >> b[i];

    long long d = 0;
    sort(a.begin(), a.end());
    sort(b.begin(), b.end());

    int r = b.size() - 1;
    int l = 0;
    int mid = 0;
    while (l > r && mid < n) {
        if (abs(a[mid] - b[l]) > abs(a[mid] - b[r])) {
            d += abs(a[mid] - b[l]);
            l++;
        } else {
            d += abs(a[mid] - b[r]);
            r--;
        }
        mid++;
    }
    
    cout << d << endl;
}

signed main() {
    ios_base::sync_with_stdio(0);cin.tie(0);
    int TC = 1;
    if (TC){
        cin >> TC;
        while (TC--) solve();
    } else {
        solve();
    }
    return 0;
}
